@model IEnumerable<Game.Models.KingdomModel>

@{
    ViewBag.Title = "Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


@{ 

    if (User.IsInRole("admin"))
    {

<p>
    @Html.ActionLink("Create New", "Create")
</p>

        }
    }


<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Population)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Population)
        </td>
        <td>
            @{
                if (User.IsInRole("admin") || User.IsInRole("user"))
                {
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
}
            }

            @{
                if (User.IsInRole("admin"))
                {
                  <font size="2"> | </font> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <font size="2"> | </font>

                }
            }

            @{
                if (User.IsInRole("admin"))
                {

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            }

</td>
    </tr>
}

</table>
