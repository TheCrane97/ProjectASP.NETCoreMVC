@model IEnumerable<Game.Models.ArmyModel>

@{
    ViewBag.Title = "Army";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@{
    if (User.IsInRole("admin"))
    {

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}

<table class="table table-hover">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.UnitId)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Defence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MagicResist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Knowledge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KingdomId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.UnitId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MagicResist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Knowledge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kingdom.Name)
            </td>
            <td>

                @{
                    if (User.IsInRole("admin") || User.IsInRole("user"))
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.UnitId })
                    }
                }
                
                @{
                    if (User.IsInRole("admin"))
                    {

                <font size="2"> | </font>@Html.ActionLink("Edit", "Edit", new { id = item.UnitId })<font size="2"> | </font>

                    }

                }
                
                @{
                    if (User.IsInRole("admin"))
                    {

                        @Html.ActionLink("Delete", "Delete", new { id = item.UnitId })
                    }

                }

            </td>
        </tr>
    }

</table>
